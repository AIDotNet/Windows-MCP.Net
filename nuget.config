<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <!-- 增加推送超时时间到10分钟 -->
    <add key="http_timeout" value="600" />
    <!-- 启用详细日志 -->
    <add key="verbosity" value="detailed" />
    <!-- 设置最大重试次数 -->
    <add key="retries" value="3" />
  </config>
  
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  
  <!-- 优化包管理 -->
  <packageManagement>
    <add key="format" value="1" />
    <add key="disabled" value="false" />
  </packageManagement>
</configuration>